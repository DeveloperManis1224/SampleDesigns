<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.android.deal.club.sampledesigns">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginPage" />
        <activity android:name=".Activities.RegisterPage" />
        <activity
            android:name=".Activities.HomeActivity"
            android:label="Adinn Outdoors"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Activities.Services"
            android:label="Services"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.PrdouctActivity"
            android:label="Products"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.AboutUs"
            android:label="About Us"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.WishList"
            android:label="My Wishlist"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ProductDetails"
            android:label="Product Details"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.ContactUs"
            android:label="Contact Us"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.CartActivity"
            android:label="My Cart"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.BookingFormActivity"
            android:label="Booking Form"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.CategoryProductView"
            android:label="Products"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activities.OrderDetails"
            android:label="My Orders"
            android:theme="@style/AppTheme"/>
        <activity android:name=".Activities.InvoiceWebView"
            android:label="Invoice"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>