<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Services">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our Services"
                android:padding="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/services_head"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/service_img1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HOARDINGS / BILLBOARDS"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hoadings"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textAlignment="inherit"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:onClick="onClickSeeMore"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/more_button_lyt"
                    android:textAllCaps="false"
                    android:text="see more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/service_img2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BUS SHELTERS / BUS BAYS"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hoadings"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textAlignment="inherit"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="normal"
                    android:onClick="onClickSeeMore"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/more_button_lyt"
                    android:textAllCaps="false"
                    android:text="see more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/service_img3"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRAFFIC SIGNS / TRAFFIC SHELTERS"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hoadings"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textAlignment="inherit"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="normal"
                    android:onClick="onClickSeeMore"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/more_button_lyt"
                    android:textAllCaps="false"
                    android:text="see more"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/service_img4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="OTHER OOH"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hoadings"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:textAlignment="inherit"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:textStyle="normal"
                    android:onClick="onClickSeeMore"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/more_button_lyt"
                    android:textAllCaps="false"
                    android:text="see more"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>




</LinearLayout>